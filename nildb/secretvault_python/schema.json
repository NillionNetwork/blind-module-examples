{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "username": {
                "type": "string"
            },
            "password": {
                "type": "object",
                "properties": {
                  "$share": {
                    "type": "integer"
                  }
                },
                "required": ["$share"]
              },
            "service": {
                "type": "string"
            }
        },
        "required": [
            "_id",
            "username",
            "password",
            "service"
        ],
        "additionalProperties": false
    }
}